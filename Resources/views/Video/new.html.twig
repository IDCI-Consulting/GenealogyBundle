{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element'},
    'Images':        { 'basepath': 'image'},
    'Races':         { 'basepath': 'race'},
    'Roles':         { 'basepath': 'role'},
    'Videos':        { 'basepath': 'video', 'active': true },
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="page-header">
      <h1>{% trans %}Youtube Video creation{% endtrans %}</h1>
    </div>

    <p>
        {% trans %}
            The Link token represent the token which is in the youtube link. For exemple the token of the http://www.youtube.com/watch?v=lZl4lEPKArc video is lZl4lEPKArcs
        {% endtrans %}
    </p>

    {{ form(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('video') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
    </ul>

{% endblock body %}
