{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entity_nav.html.twig" with {'entities' : {
    'Element':      { 'basepath': 'element'},
    'Genealogy':    { 'basepath': 'genealogy', },
    'Media':        { 'basepath': 'media'},
    'Role':         { 'basepath': 'role', 'active': true }
  }} %}
{% endblock %}


{% block body %}

{{ parent() }}

<div class="page-header">
  <h1>{% trans %}List{% endtrans %}</h1>
</div>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('role_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>    <td>
                    <a class="btn btn-block" href="{{ path('role_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
            </td>    <td>
                    <a class="btn btn-block btn-primary" href="{{ path('role_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
            </td>    <td>
                    {% render 'IDCIGenealogyBundle:Role:deleteForm' with { 'id': entity.id } %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('role_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>
{% endblock body %}
