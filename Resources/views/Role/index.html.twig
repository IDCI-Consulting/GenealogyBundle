{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element'},
    'Medias':        { 'basepath': 'media'},
    'Races':         { 'basepath': 'race'},
    'Roles':         { 'basepath': 'role', 'active': true }
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="page-header">
        <h1>{% trans %}Role list{% endtrans %}</h1>
    </div>

    <table class="table table-bordered table-striped table-condensed records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th colspan="3">{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('role_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-block" href="{{ path('role_show', { 'id': entity.id }) }}">
                                {% trans %}show{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-block btn-primary" href="{{ path('role_edit', { 'id': entity.id }) }}">
                                {% trans %}edit{% endtrans %}
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('role_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>

{% endblock body %}
