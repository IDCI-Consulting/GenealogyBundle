<name>{{ element.name }}</name>
<birthdate>{{ element.birthdate|date('d/m/Y')}}</birthdate>
<born_place></born_place>
<size>{{ element.size }}</size>
<weight>{{ element.weight }}</weight>
<sex>{% if(element.sex==0) %} m√¢le {% else %} femelle {% endif %}</sex>
<rank>{{ element.rank }}</rank>
<coat_color>{{ element.coatcolor }}</coat_color>
{% include 'IDCIGenealogyBundle:XML:functions.xml.twig' with {'roles': element.roles} %}

{% if element.hasChildren %}

    {% if(element.sex==1) %}
        {% for i in 0..element.getMothers|length-1 %}
            <child id="{{ element.getChild(i).id }}"> 
                {% if (level > 0) %}
                    {% render 'IDCIGenealogyBundle:Query:xmlChildren' with {'element': element, 'level': level, 'childNumber': i} %}
                {% endif %}
            </child>
        {% endfor %}
    {% else %}
        {% for i in 0..element.getFathers|length-1 %}
            <child id="{{ element.getChild(i).id }}">
                {% if (level > 0) %}
                    {% render 'IDCIGenealogyBundle:Query:xmlChildren' with {'element': element, 'level': level, 'childNumber': i} %}
                {% endif %}
            </child>
        {% endfor %}
    {% endif %}
    
{% endif %}

{% include 'IDCIGenealogyBundle:XML:medias.xml.twig' with {'medias': element.medias} %}