{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element'},
    'Images':        { 'basepath': 'image'},
    'Races':         { 'basepath': 'race', 'active': true },
    'Roles':         { 'basepath': 'role'},
    'Videos':        { 'basepath': 'video'}
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <h1>{% trans %}Race edit{% endtrans %}</h1>

    {{ form(edit_form) }}

    <ul class="record_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('race') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
