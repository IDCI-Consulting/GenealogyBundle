{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element', 'active': true},
    'Images':        { 'basepath': 'image'},
    'Races':         { 'basepath': 'race'},
    'Roles':         { 'basepath': 'role'},
    'Videos':        { 'basepath': 'video'}
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <h1>{% trans %}Element list{% endtrans %}</h1>

    <table class="table table-bordered table-striped table-condensed records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Birthdate{% endtrans %}</th>
                <th>{% trans %}Size{% endtrans %}</th>
                <th>{% trans %}Weight{% endtrans %}</th>
                <th>{% trans %}Sex{% endtrans %}</th>
                <th>{% trans %}Coatcolor{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('element_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.birthDate %}{{ entity.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.size }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.sex }}</td>
                <td>{{ entity.coatColor }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-block" href="{{ path('element_show', { 'id': entity.id }) }}">
                            {% trans %}show{% endtrans %}
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-block btn-primary" href="{{ path('element_edit', { 'id': entity.id }) }}">
                            {% trans %}edit{% endtrans %}
                        </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('element_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>

{% endblock %}
