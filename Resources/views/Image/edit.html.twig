{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element'},
    'Images':        { 'basepath': 'image', 'active': true },
    'Races':         { 'basepath': 'race'},
    'Roles':         { 'basepath': 'role'},
    'Videos':        { 'basepath': 'video'}
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <h1>{% trans %}Image edit{% endtrans %}</h1>
    
    <p>
        <h5>{% trans %}Insight{% endtrans %}</h5>
        <img src="/uploads/{{ entity.path }}">
    </p>

    {{ form(edit_form) }}

    <ul class="record_actions">
        <li>
            <a class="btn btn-primary" href="{{ path('image') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock %}
