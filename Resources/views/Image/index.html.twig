{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entityNav.html.twig" with {'entities' : {
    'Elements':      { 'basepath': 'element'},
    'Images':        { 'basepath': 'image', 'active': true },
    'Races':         { 'basepath': 'race'},
    'Roles':         { 'basepath': 'role'},
    'Videos':        { 'basepath': 'video'}
  }} %}
{% endblock %}

{% block body %}

    {{ parent() }}

    <h1>{% trans %}Image list{% endtrans %}</h1>

    <table class="table table-bordered table-striped table-condensed records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Path{% endtrans %}</th>
                <th>{% trans %}Updated_at{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('image_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.path }}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-block" href="{{ path('image_show', { 'id': entity.id }) }}">
                            {% trans %}show{% endtrans %}
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-block btn-primary" href="{{ path('image_edit', { 'id': entity.id }) }}">
                            {% trans %}edit{% endtrans %}
                        </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('image_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>

{% endblock %}
