{% extends "IDCIGenealogyBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCIGenealogyBundle::entity_nav.html.twig" with {'entities' : {
    'Element':      { 'basepath': 'element', 'active': true },
    'Genealogy':    { 'basepath': 'genealogy' },
    'Media':        { 'basepath': 'media' },
    'Role':         { 'basepath': 'role' }
  }} %}
{% endblock %}

{% block body %}

{{ parent() }}

<div class="page-header">
  <h1>Element</h1>
</div>

<table class="table table-bordered table-striped record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Birth_date</th>
            <td>{{ entity.birthdate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Size</th>
            <td>{{ entity.size }}</td>
        </tr>
        <tr>
            <th>Weight</th>
            <td>{{ entity.weight }}</td>
        </tr>
        <tr>
            <th>Sex</th>
            <td>{{ entity.sex }}</td>
        </tr>
        <tr>
            <th>Rank</th>
            <td>{{ entity.rank }}</td>
        </tr>
        <tr>
            <th>Coat_color</th>
            <td>{{ entity.coatcolor }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a class="btn" href="{{ path('element') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <a class="btn btn-primary" href="{{ path('element_edit', { 'id': entity.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('element_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock body %}
